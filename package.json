{
  "name": "todo-docker-cicd",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd packaged/db && npx prisma generate && cd ../..",
    "start:web": "cd apps/web && bun dev",
    "start:backend": "cd apps/backend && bun dev",
    "start:ws": "cd apps/ws-backend && bun dev"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.1",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.6",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
